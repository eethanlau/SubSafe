                </div>
              </div>
              <!-- Login -->
              <div class="form-row">
                <div class="col-lg-7 pt-3">
                  <button class="btn btn-dark px-4">Login</button>
                </div>
              </div>
              <p class="pt-3">Don't have an account? <a href="/register">Register here</a></p>
            </form>
          </div>
        </div>
      </div>
    </section>
