        <h2><%= station.title %></h2>
        <h5><a href="/stations"><i class="fa-solid fa-arrow-left"></i>All Subway Stations</a></h5>

      <div class="row">

        <!-- First Image -->
        <div class="col-12 col-md-8 mt-3">
          <div class="card shadow-sm"> 
            <!-- Carousel Markup for displaying images -->
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% station.images.forEach((img, i) => { %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <img src="<%= img.url %>" class="d-block w-100" alt="">
              </div>
              <% }) %>
            
            </div>
            <% if(station.images.length > 1) { %>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %>
          </div>
            <div class="card-body">
              <h5 class="card-title float-right">
                <h4 class="card-title text-capitalize"><%= station.title %></h4>
                <h4 class="card-title float-right">
                </h4>
                <div>Description:</div>
                <div><%= station.description %></div>
              <h5 class="card-title text-capitalize">
              <%= station.name %></h5>   
            </div>
          </div>
        </div>
      
        <!-- Card of Name/Title -->
        <div class="col-12 col-md-4 mt-2">
          <div class="d-none d-md-block">
            <div class="lead text-center text-capitalize">
              <%= station.name %>
            </div>
            <div class="card shadow-sm mt-2">
              <div class="card-header">
                <i class="fa-solid fa-train-subway"></i> <%= station.title %>
              </div>
            </div>
          


            <div class="card shadow-sm mt-3">
              <div class="card-header">
                <i class="fa-solid fa-money-bill"></i> Subway Fare:
              </div>
                  <ul class="list-group list-group-flush">
                     <li class="list-group-item">
                       $<%= station.price %>
                    </li>
                  </ul>
                </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header">
                   <i class="fas fa-map-marker-alt"></i> Location:
                </div>
                    <ul class="list-group list-group-flush">
                       <li class="list-group-item">
                         <%= station.location %>
                      </li>
                    </ul>
                  </div>
            
                  <!-- MapBox -->
                  <div class="card shadow-sm mt-3">
                    <div class="card-header">
                       <i class="fas fa-map-marker-alt"></i> Maps:
                    </div>
                        <ul class="list-group list-group-flush">
                           <!-- <li class="list-group-item"> -->
                            <div id='map' style='width: 415px; height: 200px;'></div>
                          <!-- </li> -->
                        </ul>
                      </div>
                   
                  <% if(currentUser && station.author.equals(currentUser._id)) { %>
                  <div class="card shadow-sm mt-3">
                    <div class="card-header">
                      <i class="fa-solid fa-pen-to-square"></i> Edit Station:
                    </div>
                        <ul class="list-group list-group-flush">
                           <li class="list-group-item">
                            <a class="btn btn-primary" href="/stations/<%= station._id%>/edit">Edit</a>
                          </li>
                        </ul>
                      </div>

                    <div class="card shadow-sm mt-3">
                      <div class="card-header">
                        <i class="fa-solid fa-ban"></i> Delete Station:
                      </div>
                          <ul class="list-group list-group-flush">
                             <li class="list-group-item">
                                <form action="/stations/<%=station._id%>?_method=DELETE" method="POST">
                                  <button class="btn btn-danger">Delete</button>
                                </form>
                            </li>
                          </ul>
                        </div>
                        <% } %>
          </div>
        </div>
      </div>
      
      <!-- New Row for Our Review Submission Form -->
      <% if(currentUser) { %>
      <div class="row">
        <div class="col-12 col-md-8 mt-2">
          
          <div class="card shadow-sm mt-3">
            <div class="card-header">
                <h5 class="pt-2"><a href="/stations/<%= station._id%>/review" class="btn btn-primary">Submit a Review</a></h5>
            </div>
              </div>
        </div>
      </div>
      <% } %>

      <!-- New Rows for our reviews to be shown for the station-->
      <% for (let review of station.reviews) { %>
      <div class="row">
        <div class="col-12 col-md-8 mt-2">
          <div class="card shadow-sm mt-2">
            <h5 class="pt-3 ps-4"><i class="fa-solid fa-user-check"></i>  <%= review.author.username %></h5>
            <div class="ps-3">
            <p class="starability-result" data-rating="<%= review.rating %>">
            </p>
          </div>
            <p class="ps-4 pb-2 pe-4"> <strong>Review:</strong> <%= review.body %></p>

            <!-- Need this to ensure that only the author may delete the review -->
            <% if(currentUser && review.author.equals(currentUser._id)) { %>
              <div class="position-relative">
            <form class=" pb-2 position-absolute bottom-0 end-0 pe-3" action="/stations/<%= station._id%>/reviews/<%=review._id %>?_method=DELETE" method="POST">
              <button class="btn btn-md btn-danger ">Delete</button>
            </form>
          </div>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Ending of container -->
    </div>
