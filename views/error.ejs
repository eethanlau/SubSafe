<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-12 col-md-8 offset-md-2 mb-5">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= err.message %></h4>
      <% if (process.env.NODE_ENV !== "production") { %>
      <p><%= err.stack %></p>
      <% } %>
      <p class="mb-0">
        Please contact us via email for support if something has gone wrong.
      </p>
    </div>
  </div>
</div>
